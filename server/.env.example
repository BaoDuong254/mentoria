# Environment configuration for development
NODE_ENV=development
PORT=3000

# Database configuration
DB_USER=your_db_user
DB_PASS=your_db_password
DB_SERVER=your_server_address
DB_NAME=your_database_name

# Set to true to initialize the database with schema and seed data
DB_INIT=true

# JWT configuration
JWT_SECRET=your_super_secret_jwt_key_here

# Mail configuration
MAIL_USER=your_email@gmail.com
MAIL_PASS=your_app_password
# Set to true to require email verification, false to skip verification (useful for development/testing)
MAIL_SEND=true

# Client URL (used for CORS configuration)
CLIENT_URL=http://localhost:5173

# Public URL (optional - used for payment redirects and external callbacks)
# If not set, will fallback to CLIENT_URL
# In production with domain, set this to your public domain
# Example: PUBLIC_URL=https://mentoria.ticklab.site
# PUBLIC_URL=

# Google OAuth configuration
# Get these from Google Cloud Console -> APIs & Services -> Credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Cloudinary configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Stripe configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Metrics configuration
# Comma-separated list of IPs allowed to access /metrics endpoint in production
METRICS_ALLOWED_IPS=your_ip_address1,your_ip_address2

# Gemini API configuration
# Get your Gemini API key from Google AI Studio
GEMINI_API_KEY=your_gemini_api_key
