    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:fix": "turbo run format:fix",
    "start": "turbo run start --parallel",
    "clean": "turbo run clean"
  },
  "engines": {
    "node": "24.11.0",
    "pnpm": "10.24.0"
  }
