{
  "name": "mentoria",
  "private": true,
  "packageManager": "pnpm@10.24.0",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.6.2"
  },
  "scripts": {
    "prepare": "husky",
    "preinstall": "pnpm dlx only-allow pnpm",
    "dev": "turbo run dev --parallel",
